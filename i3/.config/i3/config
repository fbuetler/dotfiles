bindsym --release shift+Print	exec scrot '%Y:%m:%d-%H%M%S.png' -e 'mv $f /home/florian/Pictures/Screenshots'

# https://github.com/Coffelius/rofi-code
bindsym $mod+c                  exec --no-startup-id rofi-code

# Volume Key Control 
bindsym XF86AudioMute		exec amixer -D pulse set Master 1+ toggle  
bindsym XF86AudioLowerVolume	exec amixer -D pulse sset Master 5%-
bindsym XF86AudioRaiseVolume	exec amixer -D pulse sset Master 5%+
bindsym XF86AudioMicMute	exec amixer -D pulse sset Capture 1+ toggle 

# Screen Brightness
bindsym XF86MonBrightnessUp	exec brightnessctl s +10%
bindsym XF86MonBrightnessDown	exec brightnessctl s 10%-

# connect/disconnect monitor
bindsym XF86Display exec --no-startup-id $HOME/scripts/update_monitor_state.sh

# move focused window between monitors
bindsym $mod+Shift+m move container to output up
bindsym $mod+Shift+n move container to output down

# move workspace between monitors
bindsym $mod+m move workspace to output up
bindsym $mod+n move workspace to output down

