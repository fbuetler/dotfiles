Host *
    ServerAliveInterval 120

    # Use one key per host
    # generate with:
    # ssh-keygen -t ed25519 -f ~/.ssh/keys/<full.host.name>
    IdentityFile ~/.ssh/keys/%h

    # Fall back
    IdentityFile ~/.ssh/id_rsa

# vis pis
Host kasse.vis.ethz.ch kavis.vis.ethz.ch vending-machine-1.vis.ethz.ch vending-machine-2.vis.ethz.ch pos-frontend.vis.ethz.ch
    User pi
    IdentityFile ~/.ssh/id_rsa

# vis hosts
Host *.vis.ethz.ch
    User vis

# geco servers
Host 10.233.*.*
    KexAlgorithms +diffie-hellman-group1-sha1
    HostKeyAlgorithms +ssh-rsa
    Ciphers +aes128-cbc

Host localhost
	UserKnownHostsFile /dev/null
	StrictHostKeyChecking no

