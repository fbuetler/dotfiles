[module/powermenu]
type = custom/menu

expand-right = false

format-spacing = 1

label-open = 
label-open-foreground = ${colors.secondary}
label-close =  cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = reboot
menu-1-0-exec = sudo reboot
menu-1-1 = cancel
menu-1-1-exec = menu-open-0

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/system-usb-udev]
type = custom/script
exec = $HOME/.config/polybar/system-usb-udev.sh
tail = true
click-left = $HOME/.config/polybar/system-usb-udev.sh --mount
click-right = $HOME/.config/polybar/system-usb-udev.sh --unmount

[module/updates-arch-combined]
type = custom/script
exec = $HOME/.config/polybar/updates-arch-combined.sh
interval = 600
format-prefix = " "
format = <label>
format-underline = #0a6cf5

[module/spotify]
type = custom/script
exec = python $HOME/.config/polybar/spotify_status.py -t 15 -f '{artist}: {song}'
interval = 1
format-prefix = " "
format = <label>
format-underline = #1db954

[module/wifi-data]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = printf "TX: %s RX: %s" "$(ifconfig wlp4s0 | awk '/TX packets/ { print $6$7 }')" "$(ifconfig wlp4s0 | awk '/RX packets/ { print $6$7 }')"
format-underline = #7ec6e0
;#1db954

[module/vpn]
type = custom/script
exec = rofi-nordvpn -s
interval = 10
click-left = rofi-nordvpn &
label = %output%
format-prefix = ""
format = <label>
format-underline = #1db954

